{
  "name": "sales-management-system",
  "version": "1.0.0",
  "description": "ts practice",
  "private": true,
  "egg": {
    "typescript": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-sales-management-system",
    "stop": "egg-scripts stop --title=egg-server-sales-management-system",
    "dev": "egg-bin dev -r egg-ts-helper/register",
    "debug": "egg-bin debug -r egg-ts-helper/register",
    "test-local": "egg-bin test -r egg-ts-helper/register",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov -r egg-ts-helper/register",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "tslint --project . -c tslint.json",
    "lint:es": "eslint --ext .js database --fix -f table && eslint --ext .js app/model --fix -f table",
    "clean": "ets clean",
    "sq": "./node_modules/.bin/sequelize",
    "count": "node ./scripts/line-of-code.js",
    "restore": "yarn sq db:drop && yarn sq db:create --charset utf8 && yarn sq db:migrate && yarn sq db:seed:all"
  },
  "dependencies": {
    "egg": "^2.6.1",
    "egg-cors": "^2.1.2",
    "egg-scripts": "^2.6.0",
    "egg-sequelize": "^4.2.0",
    "mysql2": "^1.6.4"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.6.2",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "egg-ts-helper": "^1.11.0",
    "sequelize-cli": "^5.4.0",
    "tslib": "^1.9.0",
    "tslint": "^4.0.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "yidafu",
  "license": "MIT"
}
